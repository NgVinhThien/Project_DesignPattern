          <h2>Danh sách xe</h2>        
          <table class="w3-table-all">
            <thead>
              <tr class="w3-light-grey w3-hover-green">
                <th>Id</th>
                <th>Tên xe</th>
                <th>Giá bán</th>
                <th>Hoạt động</th>
              </tr>
