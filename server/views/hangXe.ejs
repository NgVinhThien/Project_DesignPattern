            <% for(let i=0; i<idHangXe.length; i++) { %>
              <tr class="w3-hover-text-green">
                <td><%= idHangXe[i].id%></td>
                <td><%= idHangXe[i].ten_xe%></td>
                <td><%= idHangXe[i].gia%></td>
