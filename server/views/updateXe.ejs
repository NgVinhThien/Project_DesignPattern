<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/_css/homePage.css"/>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>NODE JS</title>
</head>
<body>
    <h1>Chỉnh sửa chi tiết xe</h1>
    <form action="http://localhost:5000/web/xe/update" class="create-new-form" method="post">
          <div class="row">
            <div class="col-25">
              <label for="fname">Tên xe</label>
            </div>
            <div class="col-75">
              <input type="hidden" name="id_xe" value="<%= detailsXe[0].id %>">
              <input type="text" id="fname" name="ten_xe" value="<%= detailsXe[0].ten_xe%>">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="lname">Giá bán</label>
            </div>
            <div class="col-75">
              <input type="text" id="lname" name="gia_ban" value="<%= detailsXe[0].gia%>">
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="country">Ưu đãi</label>
            </div>
            <div class="col-75">
              <select id="country" name="loai_uu_dai">
                <% for (let i=0; i<dataUD.length; i++) { %>
                  <option value="<%= dataUD[i].loai_uu_dai%>"><%= dataUD[i].loai_uu_dai%></option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="subject">Mô tả</label>
            </div>
            <div class="col-75">
              <textarea id="subject" name="mo_ta"  style="height:200px"><%= detailsXe[0].mota%></textarea>
            </div>
          </div>
         
          <div class="row">
            <!-- <input type="button" value="Submit"> -->
            <button type="submit" class="submitBtn">Cập nhật</button>
            <!-- button button1 -->
          </div>
    </form>
     
</body>
</html>